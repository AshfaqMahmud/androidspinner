<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#74EFE1"
    tools:context=".Login">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/lexend_deca"
        android:text="Login"
        android:textColor="@color/purple_500"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/tmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edittextbg"
        android:fontFamily="@font/lexend_deca"
        android:hint="Username"
        android:includeFontPadding="true"
        android:inputType="textEmailAddress"
        android:minHeight="55dp"
        android:paddingLeft="20dp"
        android:textColor="#9C27B0"
        android:textColorHint="#80000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/tpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tmail"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edittextbg"
        android:fontFamily="@font/lexend_deca"
        android:hint="Password"
        android:includeFontPadding="true"
        android:inputType="textEmailAddress"
        android:minHeight="55dp"
        android:paddingLeft="20dp"
        android:textColor="#9C27B0"
        android:textColorHint="#80000000"
        android:textSize="18sp" />



    <CheckBox
        android:id="@+id/rembrme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tpass"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/lexend_deca"
        android:minHeight="48dp"
        android:paddingLeft="5dp"
        android:text="Remember me"
        android:textColor="#01756A"
        android:textSize="16sp" />

    <Button
        android:id="@+id/loginb"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_below="@+id/rembrme"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#E91E63"
        android:fontFamily="@font/lexend_deca"
        android:padding="10dp"
        android:text="Sign IN"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/rgstrb"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_below="@+id/loginb"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#FFEB3B"
        android:fontFamily="@font/lexend_deca"
        android:padding="10dp"
        android:text="New here?"
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>
